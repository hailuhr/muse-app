<link href="/stylesheets/front.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">


<body style="font-family: Avenir">
    <div style="text-align: center">
      <br>
      <h3 style="font-family: Avenir; text-size: 40px">-  <%=@artist.name%> Trivia Questions  - </h3>
      <br>
    <div style="text-size: 20px; font-weight: bold">
      <%= form_tag ("/answers") do |f| %>

      <p><%= @album_questions[0].release_year[:question] %></p>
        <label><input type="text" name="release_year" value=""></label>
        <input type="hidden" style="font-family: Avenir" name="release_year_id" value="<%= @album_questions[0].id %>">
        <br>
        <p class="hint" style="font-family: Avenir">(Hint: Somewhere between <%= @album_questions[0].release_year_min_option %> - <%= @album_questions[0].release_year_max_option %>)</p>

        <br>
        <br>

      <p><%= @album_questions[1].popularity_rate[:question] %></p>
          <label><input type="text" name="popularity_rate" value=""></label>
          <input type="hidden" style="font-family: Avenir" name="popularity_rate_id" value="<%= @album_questions[1].id%>">
          <br>
          <p class="hint" style="font-family: Avenir">(Hint: Somewhere between <%= @album_questions[1].popularity_min_option %>% - <%= @album_questions[1].popularity_max_option %>%)</p>
        <br>
        <br>


      <p><%= @album_questions[2].track[:question] %></p>
          <label><input type="text" name="track_answer" value=""></label>
          <input type="hidden" style="font-family: Avenir" name="track" value="<%=@album_questions[2].track[:answer]%>">
          <p class="hint" style="font-family: Avenir">(Yes or No)</p>
          <br>
          <br>

          <p><%= @album_questions[3].release_year[:question] %></p>
            <label><input type="text" name="sec_release_year" value=""></label>
            <input type="hidden" style="font-family: Avenir" name="sec_release_year_id" value="<%= @album_questions[3].id %>">
            <br>
            <p class="hint" style="font-family: Avenir">(Hint: Somewhere between <%= @album_questions[3].release_year_min_option %> - <%= @album_questions[3].release_year_max_option %>)</p>

            <br>
            <br>

          <p><%= @album_questions[4].popularity_rate[:question] %></p>
              <label><input type="text" name="sec_popularity_rate" value=""></label>
              <input type="hidden" style="font-family: Avenir" name="sec_popularity_rate_id" value="<%= @album_questions[4].id%>">
              <br>
              <p class="hint" style="font-family: Avenir">(Hint: Somewhere between <%= @album_questions[4].popularity_min_option %>% - <%= @album_questions[4].popularity_max_option %>%)</p>
            <br>
            <br>


        <%= button_tag(type: "submit", class: "btn btn-default") do %>
          Enter
        <% end %>
      <% end %>
    </div>
    </div>
    <div id="grad1"></div>

</body>
<div id="grad1" class="grad1"></div>
